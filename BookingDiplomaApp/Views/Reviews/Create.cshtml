@model BookingDiplomaApp.Models.ViewModels.CreateReviewVM

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Review</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="Review.BookingId" class="control-label"></label>
                <input asp-for="Review.BookingId" class="form-control" />
                <span asp-validation-for="Review.BookingId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Review.Text" class="control-label"></label>
                <input asp-for="Review.Text" class="form-control" />
                <span asp-validation-for="Review.Text" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Review.Rating" class="control-label"></label>
                <input asp-for="Review.Rating" class="form-control" />
                <span asp-validation-for="Review.Rating" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Review.Date" class="control-label"></label>
                <input asp-for="Review.Date" class="form-control" />
                <span asp-validation-for="Review.Date" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Review.ShopUserId" class="control-label"></label>
                <select asp-for="Review.ShopUserId" class="form-control" asp-items="Model.ShopUserId"></select>
            </div>
            <div class="mb-3">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

